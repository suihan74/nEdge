<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- PreferencesActivity -->
    <!-- メニュー部分を閉じているときの横幅 -->
    <dimen name="prefMenuWidthCompact">48dp</dimen>
    <!-- メニュー部分を開いているときの横幅 -->
    <dimen name="prefMenuWidthFull">256dp</dimen>
    <!-- メニューアイコンサイズ -->
    <dimen name="prefMenuIconSize">24dp</dimen>
    <!-- メニューアイコン余白(prefMenuIconSize + prefMenuIconPadding * 2 == prefMenuWidthCompact) -->
    <dimen name="prefMenuIconPadding">12dp</dimen>
    <!-- コンテンツトップ余白(フルスクリーンなので、ノッチなどを回避するため) -->
    <dimen name="prefContentMarginTop">72dp</dimen>
    <!-- FAB部分を回避するためのリストフッタ用マージン -->
    <dimen name="prefFooterMarginWithFAB">80dp</dimen>
</resources>
