<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Application.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- App Bar の文字色 -->
        <item name="android:textColorPrimary">@color/preferencesTextColor</item>
    </style>

    <!-- ====== -->

    <style name="Base.Theme.LockScreenActivity">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ====== -->

    <style name="Base.Theme.PreferencesActivity">
        <item name="android:windowTranslucentStatus">true</item>

        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColor">@color/preferencesTextColor</item>
        <item name="android:textColorPrimary">@color/preferencesTextColor</item>
        <item name="colorOnSurface">@color/preferencesTextColor</item>
        <item name="colorSurface">@color/preferencesBackgroundColor</item>

        <item name="alertDialogTheme">@style/Theme.Dialog</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ====== -->

    <!-- AlertDialog -->
    <style name="Base.Theme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">@color/blue_700</item>
        <item name="android:textColorPrimary">@color/gray_300</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="textColorAlertDialogListItem">@color/gray_300</item>
        <item name="android:windowBackground">@color/preferencesBackgroundColor</item>
        <item name="android:background">@color/preferencesBackgroundColor</item>

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- ====== -->

    <!-- TimePickerDialog -->
    <style name="Base.Theme.Dialog.TimePicker">
        <item name="showTitle">false</item>
        <item name="android:timePickerMode">clock</item>

        <!-- TimePicker本体部分(時計盤)のスタイル -->
        <item name="android:timePickerStyle">@style/TimePickerWidgetStyle</item>

        <!-- ダイアログ下部ボタン(Positive,Negative,Neutral...分けるなら別々に作る) -->
        <item name="android:buttonBarButtonStyle">@style/TimePickerDialogButtonStyle</item>
        <!-- ダイアログ下部ボタンのタップ時背景色 -->
        <item name="colorPrimary">@color/blue_700</item>

        <!-- 入力モード切替ボタンのアイコン色 -->
        <item name="imageButtonStyle">@style/TimePickerDialogImageButtonStyle</item>

        <!-- TextView部分の背景色を透過する -->
        <item name="android:textViewStyle">@style/TimePickerDialogTextViewStyle</item>

        <!-- 直接入力モード時のテキスト色 -->
        <item name="android:editTextColor">@color/white</item>
        <!-- 直接入力モード時のフォーカス中のEditTextの色 -->
        <item name="colorAccent">@color/blue_700</item>
        <!-- 直接入力モード時のAM/PM選択用スピナの"▼"ボタンの色を設定する -->
        <item name="android:spinnerStyle">@style/TimePickerDialogSpinnerStyle</item>

        <item name="android:background">@color/preferencesBackgroundColor</item>
    </style>

    <!-- ====== -->

    <!-- ColorPickerDialog -->
    <style name="Base.Theme.Dialog.ColorPicker" parent="ColorPicker.Dark">
        <item name="android:background">@color/preferencesBackgroundColor</item>
        <!-- 透過度バー表示しない -->
        <item name="cp_showOpacityBar">false</item>
        <!-- 色コード文字列部分 -->
        <item name="cp_hexaDecimalTextColor">@color/preferencesTextColor</item>
        <!-- 成分情報部分テキスト色 -->
        <item name="cp_colorComponentsTextColor">@color/preferencesTextColor</item>
        <!-- 下部ボタンテキスト色 -->
        <item name="cp_positiveActionTextColor">@color/blue_700</item>
        <item name="cp_negativeActionTextColor">@color/blue_700</item>
        <!-- 選択中を示すカーソルの色 -->
        <item name="cp_sliderThumbColor">#accc</item>
    </style>

</resources>
