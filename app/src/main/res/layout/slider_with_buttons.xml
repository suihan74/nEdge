<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <!-- ボタンアイコンちゃんと用意する -->
        <ImageButton
            android:id="@+id/minus_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/slider"
            app:layout_constraintWidth="48dp"
            app:layout_constraintHeight="parent"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:contentDescription="@null"
            app:tint="@color/white"
            android:src="@drawable/outline_arrow_left"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            app:layout_constraintTop_toTopOf="@id/minus_button"
            app:layout_constraintBottom_toBottomOf="@id/minus_button"
            app:layout_constraintStart_toEndOf="@id/minus_button"
            app:layout_constraintEnd_toStartOf="@id/plus_button"
            app:layout_constraintWidth="parent"
            app:layout_constraintHeight="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />

        <ImageButton
            android:id="@+id/plus_button"
            app:layout_constraintTop_toTopOf="@id/minus_button"
            app:layout_constraintBottom_toBottomOf="@id/minus_button"
            app:layout_constraintStart_toEndOf="@id/slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth="48dp"
            app:layout_constraintHeight="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            app:tint="@color/white"
            android:src="@drawable/outline_arrow_right"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
